<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1712997955366-1" author="admin">
        <addColumn tableName="users">
            <column name="reputation" type="bigint"/>
        </addColumn>
    </changeSet>
    <changeSet id="1738967462746-1" author="Gravita">
        <createTable tableName="user_rep_change">
            <column name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_user_rep_change"/>
            </column>
            <column name="user_id"
                    type="BIGINT"/>
            <column name="target_id"
                    type="BIGINT"/>
            <column name="value"
                    type="BIGINT"/>
            <column name="date"
                    type="DATETIME"/>
            <column name="reason"
                    type="SMALLINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1738967485589-1" author="Gravita">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_rep_change"
                                 constraintName="FK_USER_REP_CHANGE_ON_USER"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="1738967493700-1" author="Gravita">
        <addForeignKeyConstraint baseColumnNames="target_id"
                                 baseTableName="user_rep_change"
                                 constraintName="FK_USER_REP_CHANGE_ON_TARGET"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
</databaseChangeLog>